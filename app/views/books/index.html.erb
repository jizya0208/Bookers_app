<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset = "UTF-8" />
    <title>Bookers</title>
    <link rel="stylesheet" href="homes.scss">
  </head>
  
  <body>
    <h2 class="heading">Books </h2>
    <div class="books">
      <div class="books-title">
        <h4>Title</h4>
        <% @books.each do |book| %>
          <p><%= book.title %></p>
        <% end %>
      </div>
    
      <div class="books-body">
        <h4>Body</h4>
        <% @books.each do |book| %>
          <p><%= book.body %></p>
        <% end %>
      </div>
      
      <div class="option">
        <% @books.each do |book| %>
          <%= link_to 'Show', book_path(book) %>
          <%= link_to 'Edit', edit_book_path(book) %>
          <%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "本当に削除しますか" %>
        <% end %>
      </div>
    </div>    
        
    
    <h2 class="heading">New Book</h2>
  
    <%= form_with model:@book, url:"/books", local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Body</p>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
    <% end %>
 

  </body>
</html>