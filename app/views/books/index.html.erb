<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset = "UTF-8" />
    <title>Bookers</title>
    <link rel="stylesheet" href="books.scss">
  </head>
  
  <body>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>        
          <th>Title</th>
          <th>Books</th>
          <td colspan="3"></td>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to 'Show', book_path(book) %>
          </td>
          <td>
            <%= link_to 'Edit', edit_book_path(book) %>
          </td>
          <td>
            <%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
    <h2 class="new_book">New Book</h2>
    
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message|%>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <%= form_with model:@book, url:"/books", local:true do |f| %>
      <div class="field">      
        <label for="book_title">Title</label>
        <%= f.text_field :title, id: 'book_title' %>
      </div>
      <div class="field">        
        <label for="book_body">Body</label>
        <%= f.text_area :body, id: 'book_body' %>
      </div>
      <div class="actions">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
 

  </body>
</html>